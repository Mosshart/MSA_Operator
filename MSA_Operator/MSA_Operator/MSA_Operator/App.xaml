<prism:PrismApplication x:Class="MSA_Operator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	         xmlns:prism="http://prismlibrary.com/">
    <Application.Resources>
        <ResourceDictionary>
            <FontFamily x:Key="Titillium">pack://application:,,,/Fonts/Titillium/#Titillium</FontFamily>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/ButtonStyleDictionary.xaml"/>
                <ResourceDictionary Source="../Styles/TextBoxStyleDictionary.xaml"/>
                <ResourceDictionary Source="../Styles/PasswordBoxStyleDictionary.xaml"/>
                <ResourceDictionary Source="../Styles/LabelStyleDictionary.xaml"/>
                <ResourceDictionary Source="../Styles/ListBoxStyleDictionary.xaml"/>
                <ResourceDictionary Source="../Styles/CheckBoxStyleDictionary.xaml"/>
                <ResourceDictionary Source="../Styles/ImageStyleDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</prism:PrismApplication>
 