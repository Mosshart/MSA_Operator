<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="ShadowImage" TargetType="{x:Type Image}">
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect 
                    Direction="270"
                    BlurRadius="25" 
                    Opacity="0.2" 
                    Color="Black"
                />
            </Setter.Value>
        </Setter>
    </Style>
  
</ResourceDictionary>