    -->
    
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="LabelMain" TargetType="{x:Type Label}">
        <Setter Property="Foreground" Value="#050B46"/>
        <Setter Property="Opacity" Value="1"/>
        <Setter Property="FontFamily" Value="{DynamicResource Titillium}"/>
        <Setter Property="Padding" Value="4,0,4,0"/>
    </Style>
    <Style x:Key="Label24" TargetType="{x:Type Label}"  BasedOn="{StaticResource LabelMain}">
        <Setter Property="FontSize" Value="24"/>
    </Style>
    <Style x:Key="Label13" TargetType="{x:Type Label}"  BasedOn="{StaticResource LabelMain}">
        <Setter Property="FontSize" Value="13"/>
    </Style>
    <Style x:Key="LabelBold15" TargetType="{x:Type Label}"  BasedOn="{StaticResource LabelMain}">
        <Setter Property="FontSize" Value="15" />
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    <Style x:Key="Label17" TargetType="{x:Type Label}"  BasedOn="{StaticResource LabelMain}">
        <Setter Property="FontSize" Value="17"/>
        <Setter Property="Padding" Value="4,0,4,0"/>
    </Style>
</ResourceDictionary>