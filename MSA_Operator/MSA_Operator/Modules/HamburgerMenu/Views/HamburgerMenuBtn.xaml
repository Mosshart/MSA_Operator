<UserControl x:Class="HamburgerMenu.Views.HamburgerMenuBtn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:style="pack://MSA_Operator:,,,/Styles/ButtonStyleDictionaries.xaml"
             Height="64" Width="64">
  
    <Grid>
        <Button Command="{Binding ShowHamburgerMenuCommand}"
                CommandParameter="MainOverlay" 
                Style="{StaticResource BlankButton}" >
            <Image Style="{StaticResource ShadowImage}" Source="../Images/Button_Burger_Menu.png" ></Image>
        </Button>
    </Grid>
</UserControl>
