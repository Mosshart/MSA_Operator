<UserControl x:Class="MSA_Operator.Views.CameraView.Camera"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MSA_Operator.Views.CameraView"
             xmlns:UC="clr-namespace:MSA_Operator.Views"
             mc:Ignorable="d"
             xmlns:cameraView="clr-namespace:MSA_Operator.Views.CameraView"
             xmlns:cameraViewModel="clr-namespace:MSA_Operator.ViewModels.CameraViewModel"
             d:DesignHeight="340" d:DesignWidth="604">
    <UserControl.DataContext>
        <cameraViewModel:CameraViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Border CornerRadius="10" Background="Transparent" BorderBrush="#FFFFFF" BorderThickness="4">
            <Image Source="{Binding CameraStream}" Width="604" Height="340">
               
            </Image>
        </Border>
        <cameraView:FullScreenButton Margin="558,16,16,294"/>

    </Grid>
</UserControl>
