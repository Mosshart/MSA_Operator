<UserControl x:Class="MSA_Operator.Views.Localization.FavoriteButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MSA_Operator.Views.Localization"
             xmlns:localizationViewModel="clr-namespace:MSA_Operator.ViewModels.LocalizationViewModel"
             mc:Ignorable="d" 
             Background="#FFFFFF"
             d:DesignHeight="56" d:DesignWidth="1920">
    <UserControl.DataContext>
        <localizationViewModel:FavoriteButtonViewModel/>
    </UserControl.DataContext>

    <Grid>
        <!--<Border Margin="0,0,0,0" BorderThickness="1" BorderBrush="#050B46" Opacity="0.6">-->
            <Button BorderThickness="0" Foreground="Transparent" Background="Transparent" Margin="0,0,0,0" Command="{Binding FavoriteCommand}" />
        <!--</Border>-->
        <Image  Source="/Images/Localization_Icons/Icon_Favorite.png" Margin="28,13,1862,13" Width="30" Height="30"/>
        <Image  Source="/Images/Localization_Icons/Icon_Expand_right.png" Margin="1831,0,59,0" Width="30" Height="30"/>
        <Label  Margin="98,10,1668,10" Content="Ulubione lokalizacje" FontFamily="Titillium Web" FontSize="17"/>
    </Grid>
</UserControl>