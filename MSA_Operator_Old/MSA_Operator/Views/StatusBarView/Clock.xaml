<UserControl x:Class="MSA_Operator.Views.StatusBarView.Clock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MSA_Operator.Views.StatusBarView"
             xmlns:statusBarViewModel="clr-namespace:MSA_Operator.ViewModels.StatusBarViewModel"
             mc:Ignorable="d"
             d:DesignHeight="32" d:DesignWidth="57"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True">


    <UserControl.DataContext>
        <statusBarViewModel:ClockViewModel/>
    </UserControl.DataContext>


    <Grid>
        <TextBlock  TextWrapping="WrapWithOverflow"
                    TextAlignment="Left"                    
                    Text="{Binding CurrentTime}"                    
                    FontFamily="Titillium Web" FontSize="24" Opacity="0.9" Foreground="#FFFFFF"
                    Height="32" Width="59"
                    Margin="-2,0,0,0"/>
    </Grid>
</UserControl>
