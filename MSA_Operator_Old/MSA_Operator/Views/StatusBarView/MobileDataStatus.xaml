<UserControl x:Class="MSA_Operator.Views.StatusBarView.MobileDataStatus"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MSA_Operator.Views.StatusBarView"
             xmlns:statusBarViewModel="clr-namespace:MSA_Operator.ViewModels.StatusBarViewModel"
             mc:Ignorable="d"
             d:DesignHeight="30" d:DesignWidth="30"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <UserControl.DataContext>
        <statusBarViewModel:MobileDataStatusViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Image Source="{Binding LTEPower}"/>
    </Grid>
</UserControl>
