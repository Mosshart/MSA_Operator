<UserControl x:Class="MSA_Operator.Views.StatusBarView.RobotSateliteStatus"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MSA_Operator.Views.StatusBarView"
             xmlns:statusBarViewModel="clr-namespace:MSA_Operator.ViewModels.StatusBarViewModel"
             mc:Ignorable="d"
             d:DesignHeight="33" d:DesignWidth="63"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True">


    <UserControl.DataContext>
        <statusBarViewModel:RobotSateliteStatusViewModel/>
    </UserControl.DataContext>


    <Grid>
        <Image Source="/Images/StatusBar_Icons/Icon_Sattelite.png" Margin="0,3,33,0" />
        <TextBlock
            Margin="37,-2,0,3"
            Foreground="#FFFFFF"
            TextAlignment="Left"
            Text="{Binding SatelliteNumber}" 
            FontFamily="Titillium Web" FontSize="24" Opacity="0.9"
            Width="26" Height="32"
            />
    </Grid>
</UserControl>
